# Chimera Devnet Environment Configuration
# For testing and development on Solana Devnet

# Network Configuration
COMPOSE_PROFILE=devnet
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Operator Configuration
CHIMERA_RPC__PRIMARY_URL=https://api.devnet.solana.com
CHIMERA_RPC__FALLBACK_URL=https://api.devnet.solana.com
CHIMERA_RPC__RATE_LIMIT_PER_SECOND=40

# Security
# Generate with: openssl rand -hex 32
CHIMERA_SECURITY__WEBHOOK_SECRET=devnet-webhook-secret-change-me-in-production
CHIMERA_SECURITY__WEBHOOK_RATE_LIMIT=100
CHIMERA_SECURITY__WEBHOOK_BURST_SIZE=150

# Development Mode (skips some validations)
CHIMERA_DEV_MODE=1

# Database
CHIMERA_DATABASE__PATH=/app/data/chimera.db
CHIMERA_DATABASE__MAX_CONNECTIONS=5

# Circuit Breakers (relaxed for devnet)
CHIMERA_CIRCUIT_BREAKERS__MAX_LOSS_24H_USD=1000
CHIMERA_CIRCUIT_BREAKERS__MAX_CONSECUTIVE_LOSSES=10
CHIMERA_CIRCUIT_BREAKERS__MAX_DRAWDOWN_PERCENT=20
CHIMERA_CIRCUIT_BREAKERS__COOLDOWN_MINUTES=15

# Strategy Configuration
CHIMERA_STRATEGY__SHIELD_PERCENT=70
CHIMERA_STRATEGY__SPEAR_PERCENT=30
CHIMERA_STRATEGY__MAX_POSITION_SOL=1.0
CHIMERA_STRATEGY__MIN_POSITION_SOL=0.01

# Jito Configuration (disabled for devnet)
CHIMERA_JITO__ENABLED=false
CHIMERA_JITO__TIP_FLOOR_SOL=0.001
CHIMERA_JITO__TIP_CEILING_SOL=0.01

# Token Safety (relaxed for devnet)
CHIMERA_TOKEN_SAFETY__MIN_LIQUIDITY_SHIELD_USD=1000
CHIMERA_TOKEN_SAFETY__MIN_LIQUIDITY_SPEAR_USD=500
CHIMERA_TOKEN_SAFETY__HONEYPOT_DETECTION_ENABLED=true

# Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# Monitoring
GRAFANA_PASSWORD=admin

# Paper Trading Mode (for mainnet-paper profile)
PAPER_TRADE_MODE=false
